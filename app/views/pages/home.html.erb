<div class="wrapper">
  <div class="banner-menu">
    <a href="#index" id='index-button' class="menu-button active">Accueil</a>
    <a href="#portfolio" id="portfolio-button" class="menu-button">Portfolio</a>
    <a href="#contact" id="contact-button" class="menu-button">Contact</a>
  </div>

  <div id="index" class="banner parallax" style="background: url('<%= image_path "fond_pivotes.jpg" %>') no-repeat;">
    <div class="opacity-light bg-dark-gray"></div>
    <div class="banner-content">
      <h1><%= image_tag "logo.png", height: 200 %></h1>
      <p>Notre Aventure Num√©rique</p>
    </div>
  </div>

  <div id="portfolio" class="banner parallax" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%= image_path "fond2.jpg" %>');">
    <div class="banner-content">
      <h1><%= image_tag "projets.png", height: 200 %></h1>
      <p>Site et Application web</p>
      <div class="row">
        <div class="projects">
          <div class="col-xs-12 col-sm-3">
          <%= link_to "http://www.riadzouhra.com/", target: "_blank" do %>
            <div class="card">
              <%= image_tag "riad.png"%>
            </div>
          <% end %>
          </div>
          <div class="col-xs-12 col-sm-3">
          <%= link_to "http://www.happyseat.fr/", target: "_blank" do %>
            <div class="card">
              <%= image_tag "happy.png"%>
            </div>
          <% end %>
          </div>
        </div>
      </div>
    </div>

  </div>

  <div id="contact" class="banner parallax" style="background: url('<%= image_path "agree.jpg" %>') no-repeat center;">
    <div class="opacity-light bg-dark-gray"></div>
    <div class="banner-content">
      <h1><%= image_tag "clo.png", height: 200 %></h1>
      <p>Une Aventure Humaine</p>
    </div>

  </div>
</div>
