        <%= image_tag "logoxxs.svg"%>
        <div>
          <p id="p-title">Services proposés</p>
          <p>Expertise, Technologie, Prestations,...</p>
        </div>
      </div>

        <div class="service-card presta-card hidden-xs">
          <p id="p-title">Prestations</p>
          <p>Développement de Site ou d'Application Web</p>
          <p>Parcours d'appropriation avec fourniture de Notice</p>
        </div>
        <div class="service-card techno-card hidden-xs">
          <p id="p-title">Technologies</p>
          <div class="flex-item">
            <div class="flex-column">
              <p><%= image_tag "logo-ruby.png"%></p>
              <p>Ruby</p>
            </div>
            <div class="flex-column">
              <p><%= image_tag "logo-rails.png"%></p>
              <p>Rails</p>
            </div>
          </div>
          <div class="flex-item">
            <div class="flex-column">
              <p><%= image_tag "logo-html.png"%></p>
              <p>HTML</p>
            </div>
            <div class="flex-column">
              <p><%= image_tag "logo-css3.png"%></p>
              <p>CSS</p>
            </div>
          </div>
          <div class="flex-item">
            <div class="flex-column">
              <p><%= image_tag "logo-js.png"%></p>
              <p>Java Script</p>
            </div>
            <div class="flex-column">
              <p><%= image_tag "logo-pg.png"%></p>
              <p>Postgresql</p>
            </div>
          </div>
          <div class="flex-item">
            <div class="flex-column">
              <p><%= image_tag "logo-github.png"%></p>
              <p>Github</p>
            </div>
            <div class="flex-column">
              <p><%= image_tag "logo-heroku.jpg"%></p>
              <p>Heroku</p>
            </div>
          </div>
        </div>

    </div>
  </div>

  <div id="portfolio" class="banner parallax" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%= image_path "fond2.jpg" %>');">
    <div class="opacity-extra-light bg-dark-gray"></div>
    <div class="banner-content">
    <!-- <h1><%#= image_tag "clo2.png", height: 200 %></h1> -->
      <div class="logo-card">
        <%= image_tag "logoxxs.svg"%>
        <div>
          <p id="p-title">Projets</p>
          <p>Innover, Collaborer, Accompagner</p>
        </div>
      </div>

      <p id="subtitle">Site et Application web</p>
      <div class="row">
        <div class="flex-center">
          <div class="col-xs-12 col-sm-3">
          <%= link_to "http://www.riadzouhra.com/", target: "_blank" do %>
            <div class="card">
              <%= image_tag "riad.png"%>
            </div>
          <% end %>
          </div>
          <div class="col-xs-12 col-sm-3">
          <%= link_to "http://www.happyseat.fr/", target: "_blank" do %>
            <div class="card">
              <%= image_tag "happy.png"%>
            </div>
          <% end %>
          </div>
        </div>
      </div>
    </div>

  </div>

  <div id="contact" class="banner parallax" style="background: url('<%= image_path "agree.jpg" %>');">
    <div class="opacity-light bg-dark-gray"></div>
    <div class="banner-content">
      <!-- <h1><%#= image_tag "clo.png", height: 200 %></h1> -->
      <div class="logo-card">
        <%= image_tag "logoxxs.svg"%>
        <div>
          <p id="p-title">Claudine Pradal</p>
          <p><a href="mailto:clo.pradal@gmail.com">clo.pradal@gmail.com</a></p>
          <p>www.pivotes.fr</p>
          <p>07 67 51 06 48</p>
        </div>
      </div>

      <h1 class="hidden">pivO'tes, Claudine Pradal, www.pivotes.fr</h1>
      <p id="subtitle">Une Aventure Humaine</p>
    </div>
  </div>

  <div class="mention">
    <p>Site internet réalisé par pivO'tes - <%= link_to "Mentions légales", legal_path %></p>
  </div>
</div>
